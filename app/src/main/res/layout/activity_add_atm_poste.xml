<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".atm_poste">

    <TextView
        android:id="@+id/chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/allerta"
        android:text="Chose :"
        android:textColor="@color/white"
        android:textSize="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/atm"
        android:layout_width="146dp"
        android:layout_height="165dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chose"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/atm"
        android:onClick="addatm"/>

    <ImageView
        android:id="@+id/poste"
        android:layout_width="146dp"
        android:layout_height="165dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/chose"
        app:srcCompat="@drawable/poste"
        android:onClick="addposte"/>

    <TextView
        android:id="@+id/atmid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="ATM"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/atm"
        app:layout_constraintStart_toStartOf="@+id/atm"
        app:layout_constraintTop_toBottomOf="@+id/atm" />

    <TextView
        android:id="@+id/posteid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="POSTE"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/poste"
        app:layout_constraintStart_toStartOf="@+id/poste"
        app:layout_constraintTop_toBottomOf="@+id/poste" />




</androidx.constraintlayout.widget.ConstraintLayout>